{
  "compilerOptions": {
    "lib": ["ESNext", "ESNext.AsyncIterable", "DOM"],
    "module": "ES2020",
    "target": "ES2020",
    "moduleResolution": "node",
    "moduleDetection": "force",
    "outDir": "./dist",
    "declaration": true,
    "strict": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "allowJs": true,
    "types": []
  },
  "include": [
    "lib/**/*",
    "tests/**/*"
  ],
  "exclude": ["node_modules"],
  "ts-node": {
    "esm": true
  }
}
